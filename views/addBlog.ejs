<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Add New Blog Page</title>
</head>

<body>
  <%- include('./partials/nav') %>

  <div class="container mt-5">
    <form action="/blog" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="mb-3">
            <label for="title" class="form-label">Blog Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title">
          </div>
          <div class="mb-3">
            <label for="coverImage" class="form-label">Cover Image</label>
            <input type="file" class="form-control" id="coverImage" name="coverImage">
          </div>
          <div class="mb-3">
            <label for="floatingTextarea2" class="form-label">Write Your Blog</label>
            <textarea class="form-control" id="floatingTextarea2" name="body" style="height: 150px" placeholder="Write your blog here"></textarea>
          </div>
          <div class="d-grid">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </div>
      </div>
    </form>
  </div>

  <%- include('./partials/scripts') %>
</body>

</html>